{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "tutorial": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "image": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "isFeatured": {
            "type": "boolean"
          },
          "isOfficial": {
            "type": "boolean"
          },
          "category": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "pattern": "^\\d+-\\d+-\\d+$"
          },
          "description": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "author": {
            "type": "string"
          }
        },
        "required": ["date", "id", "title"],
        "additionalProperties": false
      }
    }
  },
  "required": ["$schema", "tutorial"],
  "type": "object"
}
